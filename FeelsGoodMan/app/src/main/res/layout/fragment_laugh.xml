<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/fragment_laugh">
    <Button
        android:text="@string/meme1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/laugh_button1"
        android:layout_below="@+id/memeImage"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button" />

    <Button
        android:text="@string/meme2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/laugh_button2"
        android:layout_below="@+id/laugh_button1"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textSize="18sp" />
</LinearLayout>